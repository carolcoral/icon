{
  "name": "online-icon-library",
  "type": "module",
  "version": "1.0.0",
  "description": "纯静态图标库，支持多格式图片展示、分类管理、搜索筛选等功能",
  "main": "node-functions/express/[[default]].js",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "vite",
    "prebuild": "node build-scripts/generate-image-data.js",
    "build": "vite build",
    "preview": "vite preview",
    "clean": "rm -rf node_modules dist",
    "setup": "npm install",
    "lint": "echo \"No lint configured\" && exit 0",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "dependencies": {
    "@headlessui/vue": "^1.7.16",
    "@heroicons/vue": "^2.0.18",
    "vue": "^3.3.4"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.2.3",
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1",
    "postcss": "^8.4.24",
    "tailwindcss": "^3.3.0",
    "terser": "^5.19.2",
    "vite": "^4.5.14"
  },
  "systemRequirements": {
    "os": [
      "win32",
      "darwin",
      "linux"
    ],
    "architecture": [
      "x64",
      "arm64"
    ],
    "memory": ">=2GB",
    "storage": ">=1GB"
  },
  "features": [
    "多格式图片支持 (PNG, ICO, JPG, JPEG, GIF, SVG)",
    "智能分类管理",
    "直接访问功能 (域名/分类/图片名)",
    "分页展示 (20/50/100张每页)",
    "分类筛选和实时搜索",
    "图片预览和下载",
    "复制链接功能",
    "响应式设计",
    "现代化UI界面"
  ],
  "techStack": {
    "frontend": {
      "framework": "Vue 3.3.4",
      "buildTool": "Vite 4.4.5",
      "styling": "Tailwind CSS 3.3.0",
      "httpClient": "Axios 1.5.0",
      "components": "@headlessui/vue, @heroicons/vue"
    },
    "backend": "纯静态模式，无后端依赖",
    "development": {
      "hotReload": "Vite HMR",
      "processManager": "Nodemon",
      "concurrency": "Concurrently"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/carolcoral/icon"
  },
  "bugs": {
    "url": "https://github.com/carolcoral/icon/issues"
  },
  "homepage": "https://github.com/carolcoral/icon#readme",
  "keywords": [
    "vue3",
    "nodejs",
    "express",
    "icon-library",
    "image-management",
    "tailwindcss",
    "vite",
    "responsive-design",
    "modern-ui",
    "file-management"
  ],
  "author": {
    "name": "XIN·DU",
    "url": "https://xindu.site"
  },
  "contributors": [
    {
      "name": "CodeBuddy",
      "role": "Development Assistant"
    }
  ],
  "license": "MIT",
  "private": false
}
